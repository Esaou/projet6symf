<div class="modal fade" id="deleteImage{{ image.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><i class="fas fa-exclamation-circle" style="margin-right: 7px"></i> {{ 'image.delete.confirm.title'|trans({},'messages') }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>{{ 'image.delete.confirm'|trans({},'messages') }}</p>
                <img src="{{ asset(figuresPath ~ image.filename) }}" alt="{{ figure.name }}" class="imgList">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">{{ 'buttons.annule'|trans({},'messages') }}</button>
                <a href="{{ path('delete_image',{'image':image.id}) }}" class="text-white btn btn-sm btn-danger">{{ 'buttons.delete'|trans({},'messages') }} <i class="fas fa-trash text-white" style="margin-left: 5px;"></i></a>
            </div>
        </div>
    </div>
</div>