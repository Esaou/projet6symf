<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}SnowTricks{% endblock %}</title>

        {% block stylesheets %}
            <link rel="icon" type="image/png" href="{{ asset('images/favicon.png') }}" />
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />            {{ encore_entry_link_tags('app') }}
        {% endblock %}

    </head>
    <body>

    {% block nav %}
        {% include 'nav.html.twig' %}
    {% endblock %}

    <main>
    {% block body %}{% endblock %}
    </main>
    {% block footer %}
        {% include 'footer.html.twig' %}
    {% endblock %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success flash-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger flash-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('update') %}
        <div class="alert alert-primary flash-success">
            {{ message }}
        </div>
    {% endfor %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}

    </body>
</html>
