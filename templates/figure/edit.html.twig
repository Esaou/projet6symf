{% extends 'base.html.twig' %}

{% block title %}{{ 'editFigure.title'|trans }}{% if figure.name is not empty %} - {{ figure.name }}{% endif %}{% endblock %}

{% block body %}
    <div class="overlayShow">
    </div>
    <div class="container mt-md-5 mb-md-5 blocShow">
        <div class="imgBlocShow">
            {% set imageDisplay = include('_partial/_imageDisplay/_imageDisplay.html.twig') %}
            <img src="{{ imageDisplay }}" alt="{{ figure.name }}" class="imgShow">
            <div class="nameShow">
                <h5>{{ figure.name }}</h5>
            </div>
        </div>
        {% if figure.images is not empty or figure.videos is not empty %}
        <div class="btnMedias">
            <button type="button" class="btn btn-primary" id="showMedias">
                Voir les médias
            </button>
        </div>
        <div class="imagesList">
            {% for image in figure.images %}
                <div class="blocBtnImage">
                    <img src="{{ asset(figuresPath ~ image.filename) }}" alt="{{ figure.name }}" class="imgList">
                    <div>
                        <button class="icons" type="button" data-toggle="modal" data-target="#main{{ image.id }}" style="cursor: pointer">
                            <i class="fas fa-pen text-primary"></i>
                        </button>
                        <button class="icons" type="button" data-toggle="modal" data-target="#deleteImage{{ image.id }}" style="cursor: pointer">
                            <i class="fas fa-trash text-danger"></i>
                        </button>
                    </div>
                </div>
            {% endfor %}
            {% for video in figure.videos %}
            <div class="blocBtnImage">
                <iframe class="videoList"
                        src="{{ video.url }}">
                </iframe>
                <div>
                    <button class="icons" type="button" data-toggle="modal" data-target="#deleteVideo{{ video.id }}" style="cursor: pointer">
                        <i class="fas fa-trash text-danger"></i>
                    </button>
                </div>
            </div>
            {% endfor %}
        </div>
        {% endif %}
        <div class="p-5 pt-2 descriptionShow">
            <div>
                <p>{{ figure.description|raw }}</p>
            </div>
            <div class="text-center mt-4 blocSpan">
                <span class="badgePersoGreen">{{ 'showFigure.add'|trans }} {{ figure.createdAt|date('d/m/Y', "Europe/Paris") }} à {{ figure.createdAt|date('H', "Europe/Paris") }}h {{ figure.createdAt|date('i', "Europe/Paris") }}min {{ figure.createdAt|date('s', "Europe/Paris") }}s</span>
                {% if figure.updatedAt is not null %}
                    <span class="badgePerso">{{ 'showFigure.edit'|trans }} {{ figure.updatedAt|date('d/m/Y', "Europe/Paris") }} à {{ figure.updatedAt|date('H', "Europe/Paris") }}h {{ figure.updatedAt|date('i', "Europe/Paris") }}min {{ figure.updatedAt|date('s', "Europe/Paris") }}s</span>
                {% endif %}
                <span class="badgePersoDanger">{{ 'showFigure.category'|trans }} : {{ figure.category.name }}</span>
            </div>
        </div>
        <div class="container pt-5 pb-5">
            {{ form(form) }}
        </div>
    </div>

    {% include '_partial/_modal/_deleteFigure.html.twig' %}
    {% for image in figure.images %}
        {% include '_partial/_modal/_deleteImage.html.twig' %}
        {% include '_partial/_modal/_setMain.html.twig' %}
    {% endfor %}
    {% for video in figure.videos %}
        {% include '_partial/_modal/_deleteVideo.html.twig' %}
    {% endfor %}

{% endblock %}